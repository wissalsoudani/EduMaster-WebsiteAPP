{% extends 'base-back.html.twig' %}

{% block title %}TestHistoire{% endblock %}

{% block body %}
<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Liste des Tests</h5>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">idTest</th>
