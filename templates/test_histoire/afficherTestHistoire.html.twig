                            <td>{{ i.r31 }}</td>
                            <td>{{ i.r32 }}</td>
                            <td>{{ i.r33 }}</td>
                            <td>{{ i.correctionq3 }}</td>
                            <td>
                                <a href="{{ path('supprimerTestHistoire',{'idTest':i.idTest}) }}"> Supprimer </a>
