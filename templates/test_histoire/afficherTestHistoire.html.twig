                        <th scope="col">r33</th>
                        <th scope="col">correctionq3</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in Testhistoires %}
                        <tr>
                            <th scope="row">{{ i.idTest }}</th>
                            <th scope="row">{{ i.idHistoire.nomHistoire }}</th>
                            <td>{{ i.question1 }}</td>
                            <td>{{ i.r11 }}</td>
                            <td>{{ i.r12 }}</td>
                            <td>{{ i.r13 }}</td>
                            <td>{{ i.correctionq1 }}</td>
                            <td>{{ i.question2 }}</td>
                            <td>{{ i.r21 }}</td>
