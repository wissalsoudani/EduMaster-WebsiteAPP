{% extends 'base-back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdUser</th>
                <th>Login</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Niveau</th>
                <th>Mail</th>
             
                <th>Afficher</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.getId }}</td>

               
                <td>{{ user.login }}</td>
                
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.niveau }}</td>
                <td>{{ user.mail }}</td>
                

                
                
               
                <td> <a class="btn btn-primary  btn-sm" href="{{ path('show_user', {'id_user': user.getId}) }}" ><i class="fas fa-eye"></i></a></td>
                <td><a class="btn btn-warning  btn-sm"  href="{{ path('edit_user', {'id_user': user.getId}) }}"><i class="fas fa-pen"></i></a></td>


                  
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="col-md-12 text-center">
    <a class="btn btn-success  btn-lg" href="{{ path('new_user') }}"><i class="fas fa-user-plus">  </i></a>
    &nbsp 
    <a class="btn btn-dark  btn-lg" href="{{ path('stats_ind') }}"><i class="fas fa-chart-pie"></i></a>
    &nbsp
    <a class="btn btn-info  btn-lg" href="{{ path('user_list') }}"><i class="fas fa-print"></i></a>
</div>
<br>
<div class="pagination justify-content-center">
   {{ knp_pagination_render(users) }}
</div>

<br>

{% endblock %}
